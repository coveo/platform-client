{
    "name": "@coveord/platform-client",
    "version": "0.0.0-development",
    "description": "",
    "main": "dist/Entry.js",
    "types": "dist/definitions/Entry.d.ts",
    "keywords": [
        "coveo",
        "api",
        "client",
        "platform",
        "front-end",
        "web"
    ],
    "scripts": {
        "start": "tsc -p tsconfig.build.json --watch",
        "build": "eslint \"src/**.*\" --ignore-pattern '**/*.spec.*' --color && tsc -p tsconfig.build.json",
        "test": "jest --clearCache && jest",
        "test:changed": "jest --watch",
        "test:watch": "jest --watchAll",
        "release": "semantic-release",
        "commit-cli": "git-cz",
        "lintfix": "prettier --write \"**/*.{ts,js,json,md}\" && eslint \"src/**.*\" --fix"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "abortcontroller-polyfill": "^1.5.0",
        "clean-webpack-plugin": "^3.0.0",
        "cz-conventional-changelog": "^3.0.2",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-typescript": "^3.0.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "isomorphic-fetch": "^3.0.0",
        "jest": "^27.5.1",
        "jest-fetch-mock": "^3.0.3",
        "jest-runner-eslint": "^1.0.0",
        "lint-staged": "^9.5.0",
        "node-blob": "0.0.2",
        "prettier": "^2.1.0",
        "semantic-release": "^17.4.7",
        "ts-jest": "^27.1.4",
        "ts-loader": "^6.2.1",
        "tsjs": "^3.0.1",
        "tslib": "^2.3.0",
        "typescript": "^3.9.7"
    },
    "prettier": "tsjs/prettier-config",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "**/*.{ts,js}": [
            "prettier --write",
            "eslint -c ./.eslintrc.js --fix",
            "git add"
        ],
        "**/*.{md,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/coveo/platform-client.git"
    },
    "author": "Coveo",
    "license": "Apache-2.0",
    "homepage": "https://github.com/coveo/platform-client#readme",
    "files": [
        "/dist"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "exponential-backoff": "^3.1.0",
        "form-data": "^3.0.0",
        "query-string": "^6.13.1"
    }
}
